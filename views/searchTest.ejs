<% //검색 테스트 페이지 %>
<%- css = '<link rel="stylesheet" href="/css/searchTest.css">' %>

<div class="admin-container">
    <h2>검색 테스트 페이지</h2>
    
    <div class="search-container">
        <input type="text" id="searchInput" class="search-input" placeholder="검색어 입력">
        <button class="search-button" onclick="SearchManager.toalSearch()">검색</button>
    </div>
    
    <div class="custom-select">
        <div class="custom-item">
            <label for="storeMajorType">⚙️ 음식점 대분류: </label>
            <select class="custom-select-item" id="select-major" onchange="selectMajorType(this.value)">
                <option value="0" selected>전체</option>
                <% storeTypes.forEach(function(store) { %>
                    <option value="<%= store.majorType %>"><%= store.typeName %></option>
                <% }); %>
            </select> 
        </div>
        <div class="custom-item">
            <label for="storeSubType">⚙️ 음식점 소분류: </label>
            <select class="custom-select-item" id="select-sub">
                <option value="0" selected>전체</option>
            </select>
        </div>
    </div>

    <div class="custom-select">
        <div class="custom-item">
            <label for="zeroPossible">⚙️ 제로페이 가맹점 여부: </label>
            <input type="checkbox" class="custom-checkbox" name="zero-pay-option">
        </div>
        <div class="custom-item"></div>
    </div>

    <div class="custom-select">
        <div class="custom-item">
            <label for="storeCounty">⚙️ 시,도 : </label>
            <select class="custom-select-item" id="select-county" onchange="selectCounty(this.value)">
                <option value="0" selected>전체</option>
            </select>
        </div>
        <div class="custom-item">
            <label for="storeCounty">⚙️ 구,군 : </label>
            <select class="custom-select-item" id="select-city">
                <option value="0" selected>전체</option>
            </select>
        </div>
        <div class="custom-item">
            <label for="storeCounty">⚙️ 읍,면,동 : </label>
            <select class="custom-select-item" id="select-district">
                <option value="0" selected>전체</option>
            </select>
        </div>
    </div>

    

    <!-- <div class="find-store-title">총 <span style="color: red;" id="find-store-title-value">10</span>개의 음식점을 찾았습니다.</div> -->
    <div class="find-store-title"></div>

    <div class="result-container">
        <span class="arrow" onclick="SearchManager.prevPage()">&#60;</span>
        <div class="result-list-wrapper" id="total-search-datas">
            <!-- <div class="result-list" id="resultListWrapper">
                <div class="result-item result-list-img"></div>
                <div class="result-list-contents">
                    <div class="result-item result-addr">test</div>
                    <div class="result-item result-subject">test</div>
                </div>
                <div class="result-item result-list-star"></div>
            </div> -->
        </div>
        <span class="arrow" onclick="SearchManager.nextPage()">&#62;</span>
    </div>
    
    <div class="pagination" id="paginationInfo"><span id="cur-page" style="color: red;">1</span> / <span id="total-page">1</span></div>
</div>

<!-- ✅ 관리자 페이지 전용 스크립트 추가 -->
<%- script = '<script src="../public/js/searchTest.js"></script>' %>